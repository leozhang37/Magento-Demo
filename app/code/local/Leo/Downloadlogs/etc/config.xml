<config>
    <modules>
        <Leo_Downloadlogs>
            <version>0.1.0</version>
        </Leo_Downloadlogs>
    </modules>
    <frontend>
	  <routers>
	    <downloadable>
	      <args>
	        <modules>
	          <Leo_Downloadlogs before="Mage_Downloadable">Leo_Downloadlogs</Leo_Downloadlogs>
	        </modules>
	      </args>
	    </downloadable>
	  </routers>
	</frontend>
    <admin>
        <routers>
			<downloadlogs>
				<use>admin</use>
				<args>
					<module>Leo_Downloadlogs</module>
					<frontName>downloadlogs</frontName>
				</args>
			</downloadlogs>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<downloadlogs module="downloadlogs">
				<title>Downloadlogs</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="downloadlogs">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>downloadlogs/adminhtml_downloadlogs</action>
					</items>
				</children>
			</downloadlogs>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Leo_Downloadlogs>
							<title>Downloadlogs Module</title>
							<sort_order>10</sort_order>
						</Leo_Downloadlogs>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<downloadlogs>
					<file>downloadlogs.xml</file>
				</downloadlogs>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <downloadlogs>
                <class>Leo_Downloadlogs_Model</class>
                <resourceModel>downloadlogs_mysql4</resourceModel>
            </downloadlogs>
            <downloadlogs_mysql4>
                <class>Leo_Downloadlogs_Model_Mysql4</class>
                <entities>
                    <downloadlogs>
                        <table>downloadlogs</table>
                    </downloadlogs>
                </entities>
            </downloadlogs_mysql4>
        </models>
        <resources>
            <downloadlogs_setup>
                <setup>
                    <module>Leo_Downloadlogs</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </downloadlogs_setup>
            <downloadlogs_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </downloadlogs_write>
            <downloadlogs_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </downloadlogs_read>
        </resources>
        <blocks>
            <downloadlogs>
                <class>Leo_Downloadlogs_Block</class>
            </downloadlogs>
        </blocks>
        <helpers>
            <downloadlogs>
                <class>Leo_Downloadlogs_Helper</class>
            </downloadlogs>
        </helpers>
    </global>
</config>